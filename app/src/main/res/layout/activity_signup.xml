<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.onedayvoca.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="190dp" >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="42dp"
            android:text="하루 VOCA" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/findPwDialogNameTi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_name"
                android:textColorHint="#42000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="이름"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/findPwDialogIdTi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="24dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/signup_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:hint="아이디"
                    android:inputType="textPersonName"
                    android:textColorHint="#42000000" />

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="중복확인"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>



        <android.support.design.widget.TextInputLayout
            android:id="@+id/findPwDialogPwdTi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_pwd"
                android:drawableRight="@android:drawable/ic_menu_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="비밀번호"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/findPwDialogPwd2Ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="비밀번호 확인"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/findPwDialogEmailTi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_email"
                android:textColorHint="#42000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="이메일"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

            <!--<Button-->
                <!--android:id="@+id/btnEmail"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginBottom="12dp"-->
                <!--android:textColor="@color/white"-->
                <!--android:background="@color/colorPrimary"-->
                <!--android:textSize="18dp"-->
                <!--android:text="이메일인증" />-->
        </LinearLayout>

        <Button
            android:id="@+id/btnSignup"
            android:layout_marginTop="10dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_button1"
            android:textColor="@color/white"
            android:text="회원가입"
            android:textSize="22dp" />


    </LinearLayout>
</LinearLayout>